#!/bin/bash

# Install Npms

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.osx` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Grunt (JS Task Runner)
sudo npm uninstall -g grunt # Remove existing
sudo npm install -g grunt-cli

# Express Framework
sudo npm uninstall -g express # Remove existing
sudo npm install -g express

# Yeoman & Generator (Scaffold Webapps)
npm uninstall -g yo # Remove existing
npm install -g yo
npm uninstall -g generator-webapp # Remove existing
npm install -g generator-webapp

# Twitter Bower (Handles Dependencies)
npm uninstall -g bower
npm install -g bower